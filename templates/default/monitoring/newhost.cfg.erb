
define host{
        use                     linux-server     
        host_name               <%= "host-" + node[:auto][:external_ip]%>
        alias                   <%= node[:auto][:external_ip]%>
        address                 <%= node[:auto][:external_ip]%>
        }

define service{
        use                             generic-service         ; Name of service template to use
        host_name                       <%= "host-" + node[:auto][:external_ip]%>
        service_description             PING
        check_command                   check_ping!100.0,20%!500.0,60%
        }
